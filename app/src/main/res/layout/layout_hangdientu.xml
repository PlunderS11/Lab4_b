<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="25sp">

    <ImageView
        android:id="@+id/imageHinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/giacchuyen" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageHinh"
        android:layout_alignStart="@+id/imageHinh"
        android:layout_alignEnd="@+id/imageHinh"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="Cáp chuyển từ cổng USB sang SP2"
        android:textColor="#040000"
        android:textSize="14sp" />

    <RatingBar
        android:id="@+id/rate"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="74dp"
        android:rating="4"
        android:theme="@style/RatingBar" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rate"
        android:layout_alignStart="@+id/rate"
        android:layout_alignEnd="@+id/rate"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="22dp"
        android:text="69.000"
        android:textColor="#0E0000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pricePercentSale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/price"
        android:layout_alignBottom="@+id/price"
        android:layout_marginStart="23dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/price"
        android:text="-39%" />

    <TextView
        android:id="@+id/numRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rate"
        android:layout_alignBottom="@+id/rate"
        android:layout_marginStart="-25dp"
        android:layout_marginTop="-2dp"
        android:layout_marginBottom="-1dp"
        android:layout_toEndOf="@+id/rate"
        android:text="(15)" />

</RelativeLayout>